@page "/students"
@inject IPostgreSQLService service

<h1>Студенты</h1>

<div class="form-group">
 <a class="btn btn-info" href="createstudent">
 <i class="oi oi-plus"></i> Create New</a>
</div>

@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>email</th>
                <th>Телефон</th>
                <th>Курс</th>
                <th>Дата рождения</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.FirstName</td>
                    <td>@student.MiddleName</td>
                    <td>@student.FamilyName</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>@student.Class</td>
                    <td>@student.Birthdate</td>
                    <td>
                        <a class="btn btn-info"
                        href="editstudent/@student.Id">
                        <i class="oi oi-pencil"></i></a>
                        <a class="btn btn-danger"
                        href="deletestudent/@student.Id">
                        <i class="oi oi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Student> students;

    protected override async Task OnInitializedAsync()
    {
        students = await service.GetStudentsAsync();
    }
}
